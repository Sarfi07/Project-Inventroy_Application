extends layout 

block content 

  h1.page-title #{title}

  form(method='post')
    .form-group 
      label(for='name') Category: 
      input#name.form-control(type='text', placeholder='Clothing, Electronic etc', name='name', required value=(category ? category.name : ''))

      label(for='description') Description: 
      textarea#description.form-control(type='text', placeholder='Description', name='description', required rows='10') #{category ? category.description : ''}
    
    .form-group
      button.btn.btn-primary(type='submit') Submit 

    if errors
      ul 
        for error in errors 
          li != error.msg